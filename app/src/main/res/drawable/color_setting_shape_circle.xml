<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="oval">
    <!-- solid表示远的填充色 -->
    <solid android:color="#000000" />
    <!-- stroke则代表远的边框线 -->
    <stroke
        android:width="1dp"
        android:color="#000000" />
    <!-- size控制高宽 -->
    <size
        android:height="15dp"
        android:width="15dp" />
</shape>