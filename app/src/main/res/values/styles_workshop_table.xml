<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 车间看板-title -->
    <style name="style_view_workshop_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_view_table_title_size</item>
    </style>

    <!-- 车间看板-cell -->
    <style name="style_view_workshop_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_view_table_content_size</item>
    </style>
    <!-- vertical_view -->
    <style name="style_view_workshop_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- horizontal_view -->
    <style name="style_view_workshop_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>