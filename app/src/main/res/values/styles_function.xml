<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--功能区样式-->
    <style name="function_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/layout_bg_selector</item>
    </style>
    <style name="function_iv_left">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:src">@drawable/icon_news</item>
    </style>
    <style name="function_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/dimen_menu_list_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="function_tv_show">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">right|center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">@dimen/dimen_menu_state_list_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="function_iv_right">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/icon_arrow_right_normal</item>
    </style>
</resources>