<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <Button
        android:id="@+id/title_btn_left"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:background="@drawable/btn_title_selector"/>

    <TextView
        android:id="@+id/title_txt"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/title_btn_right"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:onClick="onPopupClick"
        android:background="@drawable/btn_title_selector"/>
    <LinearLayout
        android:id="@+id/common_constact"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/title_bar_layout">
        <Button
            android:id="@+id/constact_group"
            style="@style/lb_top_group"
            android:text="@string/btn_group"/>
        <Button
            android:id="@+id/constact_all"
            style="@style/lb_top_all"
            android:text="@string/btn_all"/>
    </LinearLayout>
</RelativeLayout>
