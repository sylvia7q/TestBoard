<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/black">
        <TextView
            android:id="@+id/dialog_feed_alarm_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/good_rate_set"
            android:textColor="@color/white"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/dialog_feed_alarm_et_warning_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:hint="@string/dialog_input_good_rate_data_please"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <!-- 确定 -->
        <Button
            android:id="@+id/dialog_feed_alarm_btn_confirm"
            style="@style/style_btn"
            android:layout_width="80dp"
            android:layout_centerInParent="true"
            android:text="@string/btn_confirm"/>

        <!-- 取消 -->
        <Button
            android:id="@+id/dialog_feed_alarm_btn_cancel"
            style="@style/style_btn"
            android:layout_width="80dp"
            android:text="@string/btn_cancel"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/btn_confirm"/>
    </LinearLayout>
</LinearLayout>